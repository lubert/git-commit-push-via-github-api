    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.46",
    "cross-env": "^5.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^8.1.0",
    "mocha": "^4.0.1",
    "prettier": "^1.7.4",
    "ts-node": "^3.3.0",
